generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id            String   @id @default(cuid())
  title         String
  description   String   @db.Text
  size          String
  price         Float
  imageUrl      String
  imagePublicId String
  isPublished   Boolean  @default(true)
  isSold        Boolean  @default(false)
  technique     String?
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Settings {
  id        String  @id @default("site-settings")
  logoText  String  @default("STUDIO")
  showBoth  Boolean @default(false)
  logoUrl   String?
  
  // Typography Settings - Card
  cardTitleSize     String @default("17px")
  cardTitleWeight   String @default("bold")
  cardTechniqueSize String @default("10px")
  cardTechniqueWeight String @default("bold")
  cardPriceSize     String @default("18px")
  cardPriceWeight   String @default("bold")
  cardDetailSize    String @default("10px")
  cardDetailWeight  String @default("bold")
  
  // Typography Settings - Detail Page
  detailTitleSize   String @default("48px")
  detailTitleWeight String @default("extrabold")
  detailPriceSize   String @default("30px")
  detailPriceWeight String @default("bold")

  updatedAt DateTime @updatedAt
}
